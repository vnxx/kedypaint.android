<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".NewEditRoom">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginLeft="25dp"
       android:layout_marginRight="25dp"
       android:layout_marginTop="50dp"
       app:layout_constraintTop_toTopOf="parent"
       tools:ignore="MissingConstraints">
       <EditText
           android:id="@+id/r_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Nama Ruangan"
           android:textColor="@android:color/white"
           android:textColorHint="@android:color/white"
           android:inputType="text"/>
       <EditText
           android:layout_marginTop="25dp"
           android:id="@+id/r_panjang"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Panjang (m)"
           android:textColor="@android:color/white"
           android:textColorHint="@android:color/white"
           android:inputType="numberDecimal"/>
       <EditText
           android:id="@+id/r_lebar"
           android:layout_marginTop="25dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Lebar (m)"
           android:textColor="@android:color/white"
           android:textColorHint="@android:color/white"
           android:inputType="numberDecimal"/>
       <EditText
           android:id="@+id/r_tinggi"
           android:layout_marginTop="25dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Tinggi (m)"
           android:textColor="@android:color/white"
           android:textColorHint="@android:color/white"
           android:inputType="numberDecimal"/>

       <Button
           android:id="@+id/btn_add"
           android:layout_marginTop="30dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="32dp"
           android:background="@drawable/rounded_button"
           android:paddingHorizontal="30dp"
           android:text="Kalkulasikan"
           android:textColor="@color/colorPrimaryDark"
           android:textSize="18dp"
           android:textStyle="bold"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.498" />
   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>